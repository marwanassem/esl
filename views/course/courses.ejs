<body>
    <%- include('../includes/navigation.ejs') %>
    <h3><a href="/add-course">Add New Course</a></h3>
    <hr>

    <% if (!courses.length) { %>
        <h3>No available courses for now.</h3>
    <% } else { %>
        <h2>All Available Courses: </h2>
        <% for (let course of courses) { %>
            <h4><%= course.name %></h4>
            <h4>Instructed by: <%= course.teacher.name %></h4>
            <h4>Price per lecture: <%= course.pricePerSession %></h4>
            
            <% } %>
    <% } %>

    


<%- include('../includes/end.ejs') %>