<%- include('./admin-includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">

<%- include('./admin-includes/navigation.ejs') %>
<main>
    <% if (courses.length > 0) { %>
        <div class="grid">
            <% for (let course of courses) { %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title">
                            <%= course.name %>
                        </h1>
                    </header>
                    <div class="card__content">
                        <h2 class="product__description">
                            <%= course.teacherId.name %>
                        </h2>
                        <p class="product__description">
                            <%= course.description %>
                        </p>
                    </div> 
                    <div class="card__actions">
                        <a href="/admin/edit-course/<%= course._id %>?edit=true" class="btn">Edit</a>
                        <!-- <form action="/admin/delete-product" method="POST"> -->
                            <input type="hidden" value="<%= course._id %>" name="courseId">
                            <button class="btn" type="button" onclick="deleteProduct(this)">Delete</button>
                        <!-- </form> -->
                    </div>
                </article>
                <% } %>
        </div>
        <% } else { %>
            <h1>No Courses for now!</h1>
        <% } %>
            <a href="/add-course">Add new Course</a>
</main>
    